{
    "DisplaySources": [
        {
            "Name": "FaceBackground",
            "Type": "StaticImageSource",
            "Args": {
                "fileName": "face_BG.png"
            }
        },
        {
            "Name": "FaceEyes",
            "Type": "AnimatedImageSource",
            "Args": {
                "fileName": "face_eyes.gif",
                "sourceVar": "EyesBlinkTimer.Frame"
            }
        },
        {
            "Name": "FaceMouth",
            "Type": "AnimatedImageSource",
            "Args": {
                "fileName": "face_mouth.gif",
                "sourceVar": "MicSensor.State"
            }
        }
    ],

    "InputSources": [
        {
            "Name": "BaseTimer",
            "Type": "TimerSource",
            "Args": {
                "resolution": 4
            }
        },
        {
            "Name": "MicSensor",
            "Type": "MicSource",
            "Args": {
                "inputDevice": "SteelSeries Sonar - Microphone",
                "gain": 1
            }
        },
        {
            "Name": "EyesBlinkTimer",
            "Type": "BlinkTimerSource",
            "Args": {
                "blinkTime": 0.4,
                "frameCount": 13,
                "blinkMinDelay": 5,
                "blinkMaxDelay": 7
            }
        }
    ],

    "Outputs": [
        {
            "Name": "DemoOutput",
            "Type": "CvOutput"
        }
    ],

    "Mappings": [
        {
            "Input": "FaceOverlay",
            "Output": "DemoOutput"
        },
        {
            "Input": "AnimatedTest",
            "Output": "DemoOutput2"
        }
    ],

    "Transforms": [
        {
            "Name": "FaceOverlay",
            "Type": "OverlayTransform",
            "Args":{
                "inputs": [
                    {
                        "name": "FaceBackground"
                    },
                    {
                        "name": "FaceEyes",
                        "x": 0,
                        "y": 0
                    },
                    {
                        "name": "FaceMouth",
                        "x": 0,
                        "y": 16
                    }
                ]
            }
        }
    ]
}