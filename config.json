{
    "DisplaySources": [
        {
            "Name": "FaceBackground",
            "Type": "StaticImageSource",
            "Args": {
                "fileName": "Images/face_BG.png"
            }
        },
        {
            "Name": "FaceEyes",
            "Type": "AnimatedImageSource",
            "Args": {
                "fileName": "Images/face_eyes.gif",
                "sourceVar": "EyesBlinkTimer.Frame"
            }
        },
        {
            "Name": "FaceMouth",
            "Type": "AnimatedImageSource",
            "Args": {
                "fileName": "Images/face_mouth.gif",
                "sourceVar": "MicSensor.State"
            }
        },
        {
            "Name": "LedScroll",
            "Type": "AnimatedImageSource",
            "Args": {
                "fileName": "Images/led_scroll.gif",
                "fps": 10
            }
        }
    ],

    "InputSources": [
        {
            "Name": "BaseTimer",
            "Type": "TimerSource",
            "Args": {
                "resolution": 4
            }
        },
        {
            "Name": "MicSensor",
            "Type": "MicSource",
            "Args": {
                "inputDevice": "SteelSeries Sonar - Microphone",
                "gain": 1
            }
        },
        {
            "Name": "EyesBlinkTimer",
            "Type": "BlinkTimerSource",
            "Args": {
                "blinkTime": 0.4,
                "frameCount": 13,
                "blinkMinDelay": 5,
                "blinkMaxDelay": 7
            }
        }
    ],

    "Outputs": [
        {
            "Name": "FaceOutput",
            "Type": "CvOutput",
            "Args": {
                "scale": 4
            }
        },
        {
            "Name": "ExampleNeoPixel",
            "Type": "CvOutput",
            "Args": {
                "scale": 16
            }
        }
    ],

    "Mappings": [
        {
            "Input": "FaceOverlay",
            "Output": "FaceOutput"
        },
        {
            "Input": "LedScroll",
            "Output": "ExampleNeoPixel"
        }
    ],

    "Transforms": [
        {
            "Name": "FaceOverlay",
            "Type": "OverlayTransform",
            "Args":{
                "inputs": [
                    {
                        "name": "FaceBackground"
                    },
                    {
                        "name": "FaceEyes",
                        "x": 0,
                        "y": 0
                    },
                    {
                        "name": "FaceMouth",
                        "x": 0,
                        "y": 16
                    }
                ]
            }
        }
    ]
}